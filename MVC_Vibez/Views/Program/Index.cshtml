<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
<div>
	<input type="text" id="txtSearch" />
	<ul id="searchResults"></ul>
</div>

<script>
    $(document).ready(function () {
        var typingTimer;
        var doneTypingInterval = 500; // milliseconds delay

        $("#txtSearch").keyup(function () {
            clearTimeout(typingTimer);
            typingTimer = setTimeout(performSearch, doneTypingInterval);
        });

        function performSearch() {
            var searchText = $("#txtSearch").val();
            $.ajax({
                type: "POST",
                url: "@Url.Action("Autocomplete", "Program")",
                data: { searchText: searchText },
                success: function (response) {
                    if (response.success) {
                        var listArtistHtml = "";
                        $.each(response.artists.slice(0, 5), function (index, artist) {
                            listArtistHtml += "<li>";
                            //listArtistHtml += "<img src='" + artist + "' />";
                            listArtistHtml += "<p>" + artist.name + "</p>";
                            listArtistHtml += "</li>";
                        });
                        $("#searchResults").html(listArtistHtml);
                    } else {
                        console.error("An error occurred: " + response.error);
                    }
                },
                error: function () {
                    console.error("An error occurred while processing your request.");
                }
            });
        }
    });
</script>
</body>
</html>