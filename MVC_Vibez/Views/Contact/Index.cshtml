
@{
    ViewData["Title"] = "Contact Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/contact.css" />
}




<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Program" asp-action="Index">
                <img src="~/images/logo.png" alt="Logo" style="height: auto; max-height: 50px; width: auto;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Library" asp-action="Index">Library</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Index">Profile</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container-contact-form">
<div class="text-center">
	<h1 class="display-4">Contact form</h1>
</div>
@model ContactFormSubmission
@using (Html.BeginForm("SubmitContactForm", "Contact", FormMethod.Post))
{
	<label asp-for="Email" class="form-label">Email</label>
	<input asp-for="Email" class="form-control" required />
    @Html.ValidationMessageFor(model => model.Email,"",new { @class = "text-danger" })

    <label asp-for="Message" class="form-label">Message</label>
    <textarea asp-for="Message" class="form-control" required rows="4"></textarea>
        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })

        <button class="btn btnSend btn-primary" type="submit">Send</button>
}
</div>
