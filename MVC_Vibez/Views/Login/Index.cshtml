@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MVC_Vibez.Model.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/login.css" />
}

<div class="loglogo-wrapper">
        <img src="~/images/logo.png" class="loglogo" alt="Logo">
</div>

<div class="container">

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <h2 style="color: #52F6FB;">Login</h2>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="form-group">
                    <div class="alert alert-danger" role="alert">
                        @ViewData.ModelState.Values.SelectMany(v => v.Errors).FirstOrDefault()?.ErrorMessage
                    </div>
                </div>
            }
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" required />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" required>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <br />
            <button asp-action="Login" type="submit" class="btn btn-primary">Login</button>
        </form>
        <div class="mt-3">
            <p>Forgot your <a asp-area="" asp-controller="Login" asp-action="Recovery" style="color: #52F6FB;">Password</a></p>
            <p>Don't have an account? <a asp-area="" asp-controller="Login" asp-action="Create" style="color: #52F6FB;">Register</a></p>
        </div>
    </div>
</div>
</div>
