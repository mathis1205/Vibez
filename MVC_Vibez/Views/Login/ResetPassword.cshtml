@model MVC_Vibez.Model.ResetPasswordModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/login.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/Navbar.css" />

}

<div class="loglogo-wrapper">
    <img src="~/images/logo.png" class="loglogo" alt="Logo">
</div>

<div class="container Font">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1>Password Reset</h1>
            <form asp-controller="Login" asp-action="SetNewPassword" method="post">
                <input type="hidden" asp-for="Token"/>

                <div>
                    <label class="form-label">New Password </label>
                    <input type="password" class="form-control" asp-for="NewPassword" required/>

                    @if (ViewData.ModelState.ContainsKey("SamePassword"))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Html.ValidationMessageFor(model => model.NewPassword, "New password must be different from the old one", new { @class = "text-danger" })
                        </div>
                    }
                    @if (ViewData.ModelState.ContainsKey("special character"))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Html.ValidationMessage("special character")
                        </div>
                    }
                    @if (ViewData.ModelState.ContainsKey("capitalized letter"))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Html.ValidationMessage("capitalized letter")
                        </div>
                    }
                    @if (ViewData.ModelState.ContainsKey("Number"))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Html.ValidationMessage("Number")
                        </div>
                    }
                </div>

                <div>
                    <label class="form-label">Confirm New Password</label>
                    <input type="password" class="form-control" asp-for="ConfirmNewPassword" required/>
                </div>

                <button type="submit" class="btn btn-primary">Set New Password</button>
            </form>
        </div>
    </div>
</div>