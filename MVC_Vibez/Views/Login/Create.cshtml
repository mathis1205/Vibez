@model User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/login.css" />
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1>@ViewBag.Title</h1>

            <form method="post">
                <partial name="CreateEditPartial" model="Model" />
                <button type="submit" class="btn btn-primary">Create</button>
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to login</a>
            </form>
        </div>
    </div>
</div>